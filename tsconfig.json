{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2018",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true    // Removi o "emitDeclarationOnly": true para que os arquivos .js sejam gerados
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
